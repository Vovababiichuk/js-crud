<main class="main">
   {{#with data}}
      <div class="main__content">
         <h1 class="title title--center">Add to <span class="accent">{{name}}</span></h1>
         <ul class="track__list">
            {{#each tracks}}
            <li class="track">
               <img src="{{image}}" alt="{{name}}" width="100" height="100">
               <div class="track__content">
                  <strong class="track__name">{{name}}</strong>
                  <em class="track__author">{{author}}</em>
               </div>
               {{!-- піднімаємось на рівень вище - {{../playlistId}}, щоб отримати доступ... --}}
               {{!-- Передаємо в якому плейлісті потрібно видалити трек і сам трек --}}
               <a href="/spotify-track-add?playlistId={{../playlistId}}&trackId={{id}}">
                  <img src="/img/svg/add_button.svg" alt="track">
               </a>
            </li>
            {{/each}}
         </ul>
      </div>
   {{/with}}
</main>