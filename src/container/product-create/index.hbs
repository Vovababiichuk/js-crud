<main>
   <section class="product-create">
      <div class="wrapper">
         <div class="container">
            <div class="product-create__menu">
               <a href="/"><i class="fa-solid fa-house"></i> Home</a>
               <a class="product-create__link-list" href="/product-list"><i class="fa-solid fa-list-check"></i> List of products</a>
            </div>
            <h1 class="product-create__title">Create a product</h1>
            <div class="wrap">
               <div class="form" id="myForm">
                  <form method="POST" action="/product-create">
                     <h2 class="form__title">Product information</h2>
                     <div class="form__content">
                        <div class="form__field">
                           <label for="name" class="form__label">Product name</label>
                           <input type="text" name="name" class="form__input">
                        </div>
                        <div class="form__field">
                           <label for="price" class="form__label">Price</label>
                           <input type="text" name="price" class="form__input"
                              oninput="validatePrice(this)">
                        </div>
                        <div class="form__field">
                           <label for="description" class="form__label">Short
                              product description</label>
                           <textarea class="form__textarea" name="description"
                              id="description"></textarea>
                        </div>
                        <button class="form__button" type="submit">Create a
                           product</button>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </section>
</main>
<script>
   const createForm = document.querySelector('form[action="/product-create"]');

createForm.addEventListener('submit', function (event) {
  const inputs = createForm.querySelectorAll('input');
  let isValid = true;

  for (let i = 0; i < inputs.length; i++) {
    if (inputs[i].value.trim() === '') {
      isValid = false;
      break;
    }
  }

  if (!isValid) {
    event.preventDefault();
    alert('Будь ласка, заповніть всі поля форми перед відправкою.');
  }
});

function validatePrice(input) {
  if (isNaN(input.value) || input.value <= 0) {
    input.setCustomValidity('Будь ласка, введіть коректне число для ціни.');
  } else {
    input.setCustomValidity('');
  }
}
</script>